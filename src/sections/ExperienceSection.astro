---
import Title from '@components/Typography/Title.astro';
import CardLayout from '@layouts/CardLayout.astro';
import { experienceData } from '@data/experienceData';
---

<CardLayout id='exp' classStyle='card flex flex-col md:flex-row md:gap-4'>
  <div class='flex flex-col gap-4'>
    <Title title='Experience' />
    {
      experienceData.map((job, index) => (
        <div class='w-full'>
          <div class='flex flex-row gap-8'>
            <div class='hidden md:block'>
              <img
                src={job.image}
                alt={job.company}
                decoding='async'
                loading='lazy'
                width='100'
                class='rounded-lg w-16 md:w-28 h-auto'
              />
            </div>
            <div class='flex flex-col gap-1'>
              <h1 class='tracking-wide capitalize text-xl font-semibold'>
                {job.company}
              </h1>
              <p class='text-md'>{job.role}</p>
              <span class='text-xs text-neutral-500'>{job.date}</span>
            </div>
          </div>
          <div>
            <ul class='list-disc ml-6'>
              {job.responsibilities.map((responsibility, index) => (
                <li class='mb-2'>{responsibility}</li>
              ))}
            </ul>
          </div>
          {index !== experienceData.length - 1 && (
            <div class='bg-gray-200 dark:bg-gray-600/50 h-px w-full my-4' />
          )}
        </div>
      ))
    }
  </div>
</CardLayout>
