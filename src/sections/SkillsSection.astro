---
import DatabaseManagement from '@components/Skills/DatabaseManagement.astro';
import ProgLang from '@components/Skills/ProgLang.astro';
import WebDev from '@components/Skills/WebDev.astro';
import SoftwareDevLifeCycle from '@components/Skills/SoftwareDevLifeCycle.astro';
import Title from '@components/Typography/Title.astro';
---

<div
  id='skills'
  class='my-4 backdrop-filter backdrop-blur-lg bg-neutral-50 dark:bg-slate-950/95 w-3/4 mx-auto p-8 rounded-2xl shadow-xl'
>
  <Title title='skills' />
  <div class='flex flex-col gap-8'>
    <ProgLang />
    <WebDev />
    <DatabaseManagement />
    <SoftwareDevLifeCycle />
  </div>
  <!-- Use the "border" and "border-t" utility classes to create a horizontal rule -->
</div>
