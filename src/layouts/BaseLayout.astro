---
import LayoutHeader from '@components/LayoutHeader.astro';
import Nav from '@components/Header/Nav.astro';
import Footer from '@components/Footer.astro';

export interface Props {
  pageTitle: string;
  seoTitle: string;
  seoDescription: string;
}
const { pageTitle, seoTitle, seoDescription } = Astro.props;
---

<!DOCTYPE html>
<html lang='en' class='scroll-smooth'>
  <LayoutHeader
    pageTitle={pageTitle}
    seoTitle={seoTitle}
    seoDescription={seoDescription}
  />
  <body
    class='overflow-x-hidden bg-primary/80 dark:bg-secondary-dark/90 text-neutral-700 dark:text-neutral-300 font-dosis transition-colors ease-in duration-450'
  >
    <!-- <SplashSection /> -->
    <div
      id='cursor'
      class='border-2 border-primary-text dark:border-secondary-text'
    >
    </div>
    <div
      id='pointer'
      class='rounded-full dark:bg-secondary-text bg-primary-text'
    >
    </div>
    <Nav class='' />
    <div class='pages-container'>
      <slot />
    </div>
    <Footer />
  </body>
</html>
