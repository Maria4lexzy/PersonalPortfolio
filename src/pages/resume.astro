---
import IconPill from '@components/IconPill';
import ResumeLayout from '@layouts/ResumeLayout.astro';
const pageTitle = "Maria's Resume";
const seoTitle = "Maria's Resume";
const seoDescription =
  'Check out my experience, skills, education and my favorite things to do in my free tiem';
---

<ResumeLayout
  pageTitle={pageTitle}
  seoTitle={seoTitle}
  seoDescription={seoDescription}
>
  <div class='container px-20 py-10'>
    <div class='header flex p-5 my-4 bg-green-600 justify-between w-full'>
      <!-- Name and occupation title -->
      <div class='flex flex-col bg-green-400 p-2'>
        <h1 class='text-4xl font-extrabold'>Maria Failli</h1>
        <p class='text-base text-neutral-500'>Full stack developer</p>
      </div>
      <div class='flex gap-x-4 items-center p-2 bg-green-300'>
        <a
          href='https://www.linkedin.com/in/maria-louisa-failli/'
          class='cursor-pointer'
          target='_blank'
        >
          <IconPill iconSrc='/images/linkedin.svg' />
        </a>
        <a
          href='https://github.com/Maria4lexzy'
          class='cursor-pointer'
          target='_blank'
        >
          <IconPill iconSrc='/images/github.svg' />
        </a>
        <a
          href='https://maria-louisa.com/'
          class='cursor-pointer'
          target='_blank'
        >
          <IconPill iconSrc='/images/portfolio.svg' />
        </a>
        <a href='tel:91 15 47 99' target='_self' class='cursor-pointer'>
          <IconPill iconSrc='/images/phone.svg' description='Give me a call' />
        </a>
        <a
          href='mailto:mariafailli42@gmail.com'
          target='_self'
          class='cursor-pointer'
        >
          <IconPill
            iconSrc='/images/email.svg'
            description='Send me an email'
          />
        </a>
      </div>
      <!-- socials & contact -->
    </div>
    <div class='experience flex p-5 my-4 bg-green-600'>
      <!-- left side -->

      <!-- right side -->
    </div>

    <div class='education p-5 my-4 bg-green-600'></div>
    <div class='skills p-5 my-4 bg-green-600'></div>
  </div>
</ResumeLayout>
